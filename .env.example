# =============================================================================
# Worklog Application Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Worklog App
APP_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=2

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================
# Get these from your Supabase project: Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here

# Service role key (optional, for admin operations)
# Get from: Settings > API > service_role (Secret) key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL for OAuth redirects (must match where your frontend runs)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Azure Configuration (for deployment)
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_APP_NAME=worklog-app

# =============================================================================
# JIRA Configuration
# =============================================================================
JIRA_BASE_URL=https://<your-jira-domain>.atlassian.net
JIRA_USER_EMAIL=your-user-email
JIRA_API_TOKEN="<your-jira-api-token>"
